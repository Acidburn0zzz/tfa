<%= nav_bar :brand => "Authorization Application", :responsive => true, :brand_link => root_path do %>
	<% menu_group :pull => :right do %>
		<% if user_signed_in? %>
			<%= menu_item "Log Out", destroy_user_session_path, :method => :delete %>
		<% else %>
			<%= menu_item 'Login', new_user_session_path %>
		<% end %>
		<% if user_signed_in? %>
			<%= menu_item "Edit account", edit_user_registration_path %>
			<% if current_user.has_role? :admin %>
				<%= menu_item "Admin", users_path %>
			<% end %>
		<% else %>
			<%= menu_item 'Sign up', new_user_session_path %>
		<% end %>
	<% end %>
<% end %>
